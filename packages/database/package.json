{
	"name": "@runner/db",
	"version": "1.0.0",
	"main": "dist/client.js",
	"source": "dist/client.js",
	"types": "src/client.ts",
	"files": ["dist/**"],
	"scripts": {
		"db:studio": "prisma studio --browser none",
		"dev": "prisma studio --browser none",
		"lint": "biome check . --write",
		"prebuild": "bun run generate",
		"predev": "prisma generate && prisma db push",
		"build": "tsc",
		"clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
	},
	"dependencies": {
		"@prisma/client": "^6.6.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"prisma": "^6.6.0",
		"tsup": "^8.4.0"
	},
	"nx": {
		"targets": {
			"biome-lint": {
				"executor": "@gitopslovers/nx-biome:biome-lint",
				"outputs": ["{options.outputFile}"],
				"options": {
					"lintFilePatterns": ["packages/database/**/*.ts"],
					"write": false,
					"unsafe": false
				}
			}
		}
	}
}
