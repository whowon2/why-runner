generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Problem {
  id        String   @id @default(uuid())
  title     String
  description String
  difficulty String
  tags      String[]
}

model Submission {
  id       String           @id @default(uuid())
  language Language
  code     String
  status   SubmissionStatus @default(PENDING)
  output   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Language {
  c
  cpp
  java
  python
  rust
}

enum SubmissionStatus {
  PENDING
  RUNNING
  COMPLETED
  ERROR
}
