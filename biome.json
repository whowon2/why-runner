{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": true,
		"ignore": ["dist", ".next", "node_modules", "generated", ".nx"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"useHookAtTopLevel": "off",
				"useImportExtensions": "off",
				"noNodejsModules": "off",
				"noUndeclaredDependencies": "off"
			},
			"style": {
				"useImportType": "off",
				"noDefaultExport": "off",
				"useNamingConvention": "off",
				"noParameterProperties": "off"
			},
			"nursery": {
				"useSortedClasses": {
					"level": "warn",
					"fix": "safe",
					"options": {
						"attributes": ["classList"],
						"functions": ["clsx", "cva", "tw"]
					}
				}
			}
		}
	},
	"javascript": {
		"globals": ["it", "expect", "describe", "beforeEach"],
		"formatter": {
			"quoteStyle": "double",
			"indentStyle": "tab"
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	}
}
